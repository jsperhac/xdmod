{
    "module": "gateways",
    "defaults": {
        "global": {
            "endpoints": {
                "source": {
                    "type": "mysql",
                    "name": "XDMoD Database",
                    "config": "database",
                    "schema": "modw",
                    "create_schema_if_not_exists": true
                },
                "destination": {
                    "type": "mysql",
                    "name": "XDMoD Database",
                    "config": "database",
                    "schema": "modw_gateways",
                    "create_schema_if_not_exists": true
                }
            }
        },
        "ingest": {
            "namespace": "ETL\\Ingestor",
            "class": "DatabaseIngestor",
            "options_class": "IngestorOptions"
        }
    },

    "#": "New job ingestion from HPCDB to XDMoD DataWarehouse (xdw)",
    "bootstrap": [
        {
            "name": "table-create",
            "description": "Setup tables",
            "class": "ManageTables",
            "namespace": "ETL\\Maintenance",
            "options_class": "MaintenanceOptions",
            "# order-matters": "Because of foreign key constraints",
            "definition_file_list": [
		"gateways/modw_gateways.gateway.json",
		"gateways/modw_gateways.gatewayfact_by_day.json",
		"gateways/modw_gateways.gatewayfact_by_month.json",
		"gateways/modw_gateways.gatewayfact_by_quarter.json",
		"gateways/modw_gateways.gatewayfact_by_year.json",
		"gateways/modw_gateways.gw_job_tasks.json"
            ]
        }
    ],
    "ingest": [
	{
	    "name": "gateway",
	    "description": "Gateway information",
            "definition_file": "gateways/gateway.json"
	},
	{
	    "name": "gw_job_tasks",
	    "description": "Gateway job tasks",
            "definition_file": "gateways/job_tasks.json"
	},
	{
	    "name": "gatewayfact_by_day",
	    "description": "Gateway job facts by day",
            "definition_file": "gateways/jobfact_by_day.json"
	},
	{
	    "name": "gatewayfact_by_month",
	    "description": "Gateway job facts by month",
            "definition_file": "gateways/jobfact_by_month.json"
	},
	{
	    "name": "gatewayfact_by_quarter",
	    "description": "Gateway job facts by quarter",
            "definition_file": "gateways/jobfact_by_quarter.json"
	},
	{
	    "name": "gatewayfact_by_year",
	    "description": "Gateway job facts by year",
            "definition_file": "gateways/jobfact_by_year.json"
	}
    ]
}
